---
import Container from "@components/common/Container.svelte";

import Sidebar from "@components/Sidebar/index.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <Container classes="my-16">
      <div class="grid grid-cols-12 divide-x">
        <aside class="col-span-3 flex flex-col gap-8 pr-6">
          <Sidebar />
        </aside>
        <main class="col-span-6 px-6">
          <slot />
        </main>
        <aside class="col-span-3 pl-6">
          <slot name="sidebar-left" />
        </aside>
      </div>
    </Container>
  </body>
</html>
