---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string;
  text: string;
  route: string;
}

const { icon, text, route } = Astro.props;
---

<a
  class:list={[
    "flex content-center items-center gap-2",
    "-ml-4 rounded-full px-4 py-2 transition-colors hover:bg-blue-100",
  ]}
  href={route}
>
  <Icon name={icon} class="inline-block w-8 text-3xl" />
  <span class="text-lg font-bold">{text}</span>
</a>
