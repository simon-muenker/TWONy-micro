<h2 class="mb-4 text-2xl">Network Metrics</h2>
<canvas id="networkMetrics" height="200"> </canvas>

<div class="h-12"></div>

<h2 class="mb-4 text-2xl">User Metrics</h2>
<canvas id="userMetrics" height="300"> </canvas>

<script>
  import Chart from "chart.js/auto";

  const ctx1 = document.getElementById("networkMetrics") as HTMLCanvasElement;

  if (ctx1 !== null) {
    new Chart(ctx1, {
      type: "line",
      data: {
        labels: [1, 2, 3, 4, 5, 6, 7],
        datasets: [
          {
            label: "positivity",
            data: [0.8, 0.85, 0.9, 0.6, 0.4, 0.3, 0.3],
            fill: false,
            borderColor: "rgb(75, 192, 192)",
            tension: 0.1,
          },
          {
            label: "negativity",
            data: [0.4, 0.35, 0.5, 0.6, 0.8, 0.8, 0.85],
            fill: false,
            borderColor: "rgb(255, 99, 132)",
            tension: 0.1,
          },
        ],
      },
    });
  }

  const ctx2 = document.getElementById("userMetrics") as HTMLCanvasElement;

  if (ctx2 !== null) {
    new Chart(ctx2, {
      type: "bar",
      data: {
        labels: ["Human", "Bot 1", "Bot 2", "Bot 3", "Bot 4"],
        datasets: [
          {
            label: "positivity",
            data: [0.8, 0.85, 0.9, 0.6, 0.4, 0.3, 0.3],
            backgroundColor: "rgb(75, 192, 192)",
          },
          {
            label: "negativity",
            data: [0.4, 0.35, 0.5, 0.6, 0.8, 0.8, 0.85],
            backgroundColor: "rgb(255, 99, 132)",
          },
        ],
      },
      options: {
        indexAxis: 'y',
      }
    });
}
</script>
